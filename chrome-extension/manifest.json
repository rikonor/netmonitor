{
  "manifest_version": 2,

  "name": "netmonitor",
  "description": "shows network usage of webpages when the browser doesn't",
  "version": "0.0.4",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "logo.png"
  },

  "permissions": [
    "activeTab",
    "webRequest",
    "http://*/",
    "https://*/"
  ],

  "web_accessible_resources": [
    "logo.png"
  ]
}
